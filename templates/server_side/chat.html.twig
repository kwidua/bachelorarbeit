{% extends 'base.html.twig' %}

{% block title %}Hello ServerSideController!{% endblock %}

{% block body %}
    Channel: {{ channel }}

    <ul>
        {% for message in messages %}
            <li>{{ message.timestamp.format('d-m-Y H:i:s') }} - <strong>{{ message.user }}</strong>: {{ message.message }}</li>
        {% endfor %}
    </ul>
    <div>
        <p>{{ form(message_form) }}</p>
    </div>

    <a href="/">back</a>
{% endblock %}