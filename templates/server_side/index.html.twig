{% extends 'base.html.twig' %}

{% block title %}Hello ServerSideController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h2>Chat Channels</h2>

    <ul>
        {% for channel in channels %}
            <li><strong>{{ channel.name }}</strong>( {{ channel.roles | join }} )
            <br>
                <a href="/channel/{{ channel.name }}">Server Side Rendering</a>,
                <a href="/mercure?channel={{ channel.name }}">Mercure</a>,
                <a href="/websocket?channel={{ channel.name }}">WebSocket</a>,
                <a href="/sse?channel={{ channel.name }}">SSE</a>
            </li>
        {% endfor %}
    </ul>

